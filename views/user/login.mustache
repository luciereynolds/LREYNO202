<html  lang="en" class="h-100">
<head>
    {{>header}}
</head>
<body class="h-100">
<div class="text-center">
    <h1>{{title}}</h1>
<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
    <div class="col-10 col-md-8 col-lg-6">
    <!-- Form -->
    <form class="form-example" method="POST" action="/login">
    <h1>Please Sign In</h1>
    <!-- Input Fields -->
            <div class="form-group">
                <label for="username">Username: </label>
                <input type="text" class="form-control username" id="username" name="username" placeholder="Username...">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control password" id="password" name="password" placeholder="password">
            </div>
            <br>
        <input type="submit" value="Sign In" class="btn btn-primary btn-customized">
        <!-- End Input Fields -->
        </form>
<!-- Form End -->
</div>
</div>
</div>
</body>
</html>