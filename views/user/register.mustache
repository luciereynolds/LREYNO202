<html lang="en" class="h-100">
<head>
    {{>header}}
</head>
<body class="h-100">
<div class="text-center">
    <h1>{{title}}</h1>
<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
    <div class="col-10 col-md-8 col-lg-6">
    <!-- Form -->
    <form class="form-example" method="POST" action="/register">
    <h1>New User Registration</h1>
    <!-- Input Fields -->
        <div class="form-group">
            {{user-name-error}}
            <label for="username">Username</label>
            <input type="text" class="form-control username" id="username" name="username" placeholder="Enter username" required>
        </div>
        
        <div class="form-group">
            <label for="password">Password (8 Characters minimum)</label>
            <input type="password" class="form-control password" id="pass" name="pass" placeholder="Enter password" minlength="8" required>
        </div>
        <br>
            <input type="submit" value="Register" class="w-100 btn btn-primary btn-customized">
            <!-- End Input Fields -->
    </form>
    <!-- Form End -->
</div>
</div>
</div>
</body>
</html>